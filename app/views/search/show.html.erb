<p><%= params[:zip_code] %></p>

<p><%= @senkyoku.name %></p>

<ul>
<% if @senkyoku.present? %>
<% @senkyoku.candidates.each do | candidate | %>
  <li>
  	公認政党:<%= candidate.party.try(:short_name) || "無所属" %>
  	first name:<%= candidate.name_first %><br />
  	last name: <%= candidate.name_last %><br />
  	first name(かな):<%= candidate.name_first_furigana %><br />
  	last name(かな): <%= candidate.name_last_furigana %><br />
  	age: <%= candidate.age %><br />
    full name:<%= candidate.full_name %><br />
    full name(かな)<%= candidate.full_name_furigana %><br />
  </li>
<% end %>
<% end %>
</ul>