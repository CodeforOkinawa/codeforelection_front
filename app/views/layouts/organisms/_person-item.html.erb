<div class="person-item">
    <%= render partial:'layouts/molecules/person', locals: {src: image} %>
    <div class="typo-text-1">
      <%= party %>
      <%= render partial:'layouts/molecules/area-type', locals: { isHirei: isHirei } %>
    </div>

    <div class="column">
        <div class="typo-2 person-name"><%= name %></div>
    </div>
    <div class="column">
      <div class="typo-text-1 person-age"><%= age %></div>
      <div class="typo-text-1 former-job"><%= job %></div>
    </div>
    <%= render partial:'layouts/molecules/detail-button', locals: {detailUrl: detailUrl} %>
</div>
